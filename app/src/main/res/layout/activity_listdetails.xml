<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#B00020"
            app:title="WorkLink"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textServerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/solicitud_n"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Tipo"
                    app:layout_constraintTop_toBottomOf="@+id/textServerName"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/reqType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/tipo"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Estado"
                    app:layout_constraintTop_toBottomOf="@+id/reqType"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/reqEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/estado"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Horas Solicitadas"
                    app:layout_constraintTop_toBottomOf="@+id/reqEstado"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/reqHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/horas"
                    android:inputType="numberDecimal"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:layout_editor_absoluteX="16dp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/reqHours"
                    tools:layout_editor_absoluteX="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hora_inicio" />

                        <TextView
                            android:id="@+id/reqFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Seleccionar"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hora_fin" />

                        <TextView
                            android:id="@+id/reqTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seleccionar"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                </LinearLayout>

                <Switch
                    android:id="@+id/reqUrgent"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/urgente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/reqUrgent"
                    tools:layout_editor_absoluteX="16dp">

                    <Button
                        android:id="@+id/btn_reqMod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#AF0020"
                        android:text="@string/modificar" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/btn_reqDelete"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#520107"
                        android:text="@string/eliminar" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/botNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/design_default_color_error"
            app:itemTextColor="#F6F3F3"
            app:menu="@menu/bottom_menu" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>